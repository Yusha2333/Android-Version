<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".placeHolder"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/exercisePage"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/topTitle"
            android:layout_width="200sp"
            android:layout_height="60sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20sp"
            android:text="Exercises"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/messenger"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="40sp"
            android:text="Messenger"></Button>

    </LinearLayout>

    <TextView
        android:id="@+id/recentSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20sp"
        android:text="Recent Exercises"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginBottom="10sp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flower"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_marginStart="20sp"
            android:background="@drawable/flower" />

        <ImageView
            android:id="@+id/bubbles"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_marginStart="50sp"
            android:background="@drawable/bubbles" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mazeAndBubble"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginBottom="20sp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textMaze"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_marginStart="20sp"
            android:text="Maze"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/textBubble"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_marginStart="50sp"
            android:text="Bubble"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25sp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/baseExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginBottom="20sp"
        android:text="Basic Exercises"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/images2"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/flower2"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_marginStart="20sp"
            android:background="@drawable/flower" />

        <ImageView
            android:id="@+id/bubbles2"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_marginStart="50sp"
            android:background="@drawable/bubbles" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mazeAndBubble2"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginBottom="30sp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textMaze2"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_marginStart="20sp"
            android:text="Maze"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/textBubble2"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_marginStart="50sp"
            android:text="Bubble"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25sp"/>
    </LinearLayout>

</LinearLayout>